{
  "name": "cancer-care-platform",
  "version": "1.0.0",
  "description": "A production-ready MERN stack web application for cancer patients and their care teams",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd apps/backend && npm run start",
    "start:frontend": "cd apps/frontend && npm run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd apps/backend && npm test",
    "test:frontend": "cd apps/frontend && npm test",
    "lint": "eslint apps/backend apps/frontend",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up --build",
    "seed": "cd apps/backend && npx tsx scripts/seed.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "cancer-care",
    "healthcare",
    "patient-management",
    "mern-stack",
    "typescript"
  ],
  "author": "Cancer Care Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
